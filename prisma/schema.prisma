generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String    @id @default(uuid())
  username               String    @unique
  email                  String    @unique
  password               String
  is_active              Boolean   @default(true)
  is_verified            Boolean   @default(false)
  created_at             DateTime  @default(now()) @db.Timestamptz()
  updated_at             DateTime  @updatedAt @db.Timestamptz()
  last_login             DateTime? @db.Timestamptz()
  refresh_token          String?
  refresh_token_expires  DateTime? @db.Timestamptz()
  setup_token            String?
  setup_expires          DateTime? @db.Timestamptz()
  password_changed_at    DateTime? @db.Timestamptz()
  password_reset_token   String?
  password_reset_expires DateTime? @db.Timestamptz()
  // mfa_enabled             Boolean?
  roleId                 String

  role      Role       @relation(fields: [roleId], references: [id])
  audit_log AuditLog[]
  // roles  UserRole[]
  // alerts Alert[]

  @@map("users")
}

model Role {
  id          String @id @default(uuid())
  name        String @unique
  description String

  users User[]

  @@map("roles")
}

model AuditLog {
  id            BigInt   @id
  user_id       String
  action        String
  resource_type String
  resource_id   String
  details       Json
  created_at    DateTime @db.Timestamptz()

  user User @relation(fields: [user_id], references: [id])

  @@map("audit_logs")
}
