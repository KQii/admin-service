model AuditLog {
  id            BigInt   @id
  user_id       String
  action        String
  resource_type String
  resource_id   String
  details       Json
  created_at    DateTime @db.Timestamptz()

  user User @relation(fields: [user_id], references: [id])

  @@map("audit_logs")
}

