# Database Configuration
POSTGRES_USER=admin_user
POSTGRES_PASSWORD=your-super-secure-db-password
POSTGRES_DB=admin_service_db
DATABASE_URL=postgresql://admin_user:your-super-secure-db-password@postgres:5432/admin_service_db

# Redis Configuration
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@redis:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
ACCESS_TOKEN_EXPIRES_IN=15m
JWT_COOKIE_EXPIRES_IN=90

# Email Configuration
EMAIL_FROM=noreply@yourapp.com
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Application Configuration
NODE_ENV=production
PORT=8000

# OAuth2 Configuration (optional)
OAUTH2_CLIENT_ID=grafana-client
OAUTH2_CLIENT_SECRET=grafana-secret